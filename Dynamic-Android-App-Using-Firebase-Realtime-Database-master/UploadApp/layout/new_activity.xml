<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add "
        android:layout_marginEnd="10dp"/>


    <EditText
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add New Activity"
        android:layout_toEndOf="@+id/btn_cat"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textview_selectCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add"
        android:text="Click on Category to Which you want to insert Data"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />




    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/textview_selectCategory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/category_recyclerview">
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>